      - @taiketsus.each do |taiketsu|
        .main__posts--list
          = link_to taiketsu_path(taiketsu.id), class: "link" do
            .main__posts--list__title
              = taiketsu.topics.first.topic
            .VS
              VS
            .main__posts--list__title
              = taiketsu.topics.second.topic
            .main__posts--list__vote
              23/45
    .kaminari
      = paginate @taiketsus
    .main__name--bottom
    ご意見募集中のお題
    .main__posts
      - @accepting_taiketsus.each do |accepting_taiketsu|
        .main__posts--list
          = link_to taiketsu_path(accepting_taiketsu.id), class: "link" do
            .main__posts--list__title
              = accepting_taiketsu.topics.first.topic
            .VS
              VS
            .main__posts--list__title
              = accepting_taiketsu.topics.second.topic
            .main__posts--list__vote
              28点 / 24点