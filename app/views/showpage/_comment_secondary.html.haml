.columns.large-6.comment_secondary
  .panel.addhtml
    .row
      .columns.large-12
        %h3
          %span.second
            = @topic_second.topic
          からのご意見
    - @comments_second.each_with_index do |comment, i|
      - if i % 2 == 0
        .comment_block.bgc-gray
          .row
            .columns.large-12
              %p
                = comment.text
      - else
        .comment_block.bgc-white
          .row
            .columns.large-12
              %p
                = comment.text
    = form_for [@taiketsu, @comment] do |f|
      .comment_form
        .form__input
          = f.text_area :text, placeholder: '思いの丈をぶつけてください', value: "", class: 'new_comment', maxlength: "200", size: "50"
          = f.hidden_field :topic_id, value: @topic_second.id
        .form__submit
          = f.submit value: '意見を投稿する', class: 'submit'
