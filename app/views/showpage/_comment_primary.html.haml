.columns.large-6.comment_primary
  .panel.left
    .row
      .columns.large-12
        %h3
          %span.first
            = @topic_first.topic
          からのご意見
        .scroll
          = fa_icon 'arrow-circle-down', class: 'icon-left', title: '意見投稿フォームまでスクロールする'
    - @comments_first.each_with_index do |comment, i|
      - if i % 2 == 0
        .comment_block.bgc-gray
          .row
            .columns.large-12
              %p
                = comment.text
      - else
        .comment_block.bgc-white
          .row
            .columns.large-12
              %p
                = comment.text
    = form_for [@taiketsu, @comment] do |f|
      .comment_form
        .form__input
          = f.text_area :text, placeholder: '思いの丈をぶつけてください', value: "", class: 'new_comment', maxlength: "200", size: "50"
          = f.hidden_field :topic_id, value: @topic_first.id
        .form__submit
          = f.submit value: '意見を投稿する', class: 'submit'
          .form__jump
            = fa_icon 'arrow-circle-up',class: 'jump_icon',title: '上にスクロールする'
